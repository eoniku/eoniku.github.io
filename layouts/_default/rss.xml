{{- $all := site.RegularPages -}}
{{- $limit := cond (isset site.Params "rssLimit") (index site.Params "rssLimit") 20 -}}
{{- $pages := first $limit $all -}}<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.Title | html }}</title>
    <link>{{ site.BaseURL }}</link>
    <description>{{ with site.Params.description }}{{ . | html }}{{ else }}Recent content on {{ site.Title | html }}{{ end }}</description>
    <language>{{ or site.LanguageCode "ja" }}</language>
    <lastBuildDate>{{ now | time.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</lastBuildDate>
    <atom:link href="{{ site.BaseURL }}index.xml" rel="self" type="application/rss+xml" />
    {{- range $pages }}
    <item>
      <title>{{ .Title | html }}</title>
      <link>{{ .Permalink }}</link>
      <guid isPermaLink="true">{{ .Permalink }}</guid>
      <pubDate>{{ .Date | time.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</pubDate>
      {{- with .Params.description -}}
        <description>{{ . | html }}</description>
      {{- else -}}
        {{ with .Summary }}<description>{{ . | html }}</description>{{ end }}
      {{- end }}
    </item>
    {{- end }}
  </channel>
</rss>
