{{- $pctx := . -}}
{{- $pages := where .Site.RegularPages "Type" "not in" (slice "page") -}}
{{- $pages = $pages | first (or .Site.RSS.Limit 20) -}}
<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<rss version="2.0">
  <channel>
    <title>{{ .Site.Title | html }}</title>
    <link>{{ .Site.BaseURL }}</link>
    <description>{{ with .Site.Params.description }}{{ . | html }}{{ end }}</description>
    <generator>Hugo</generator>
    {{- range $pages }}
    <item>
      <title>{{ .Title | html }}</title>
      <link>{{ .Permalink }}</link>
      <guid isPermaLink="true">{{ .Permalink }}</guid>
      <pubDate>{{ .Date | time.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</pubDate>
      {{ with .Params.description }}<description>{{ . | html }}</description>{{ end }}
    </item>
    {{- end }}
  </channel>
</rss>
